{
    "name": "HomeTask",
    "n_gpu": 1,

    "arch": {
        "type": "HomeTaskModel",
        "args": {
            "layers_list": [2, 5, "sigmoid", 15, "relu", 4, "tanh", 2]
        }
    },
    "data_loader": {
        "type": "HomeTaskDataLoader",
        "args":{
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
